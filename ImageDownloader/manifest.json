{
  "name": "Image Downloader",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js", "message_manager.js", "messages.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["overlay.css"],
      "js": ["messages.js", "message_manager.js", "image_finder.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
  }
}

